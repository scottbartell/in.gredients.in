<section id="results">
  <% if @recipes.present? %>
  <ul class="recipes">
    <% @recipes.each do |recipe| %>
      <%= link_to(recipe) do %>
        <ul class="recipe">
          <li class="recipe-thumbnail"><%= square_image recipe.image_name %></li>
          <li class="recipe-title"><%= title(recipe.name) %></li>
          <li class="recipe-ingredients"><i><%= ingredient_list recipe.ingredients %></i></li>
        </ul>
      <% end %>
    <% end %>
  </ul>
  <% else %>
    <% if params[:q].present? %>
    <p class="no_results">Sorry, no results found.</p>
    <% end %>
  <% end %>
</section>

<%#= render 'autocomplete_js' %>